# Conveyor configuration environment variables
# Copy this file to .env and fill in your actual values

# Windows Store credentials
WINDOWS_STORE_CLIENT_ID=your_windows_store_client_id
WINDOWS_STORE_CLIENT_SECRET=your_windows_store_client_secret
WINDOWS_STORE_TENANT_ID=your_windows_store_tenant_id

# Windows Store publisher information
WINDOWS_STORE_PUBLISHER=CN=your-publisher-certificate-id
WINDOWS_STORE_PUBLISHER_DISPLAY_NAME=Your Company Name

# Conveyor license and billing
CONVEYOR_BILLING_EMAIL=your_email@example.com
CONVEYOR_LICENSE_KEY=your_conveyor_license_key

# Site configuration
SITE_BASE_URL=https://your-bucket.s3.amazonaws.com/conveyor

# AWS credentials for S3 deployment
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
