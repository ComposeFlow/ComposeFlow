<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the log file name -->
    <property name="LOG_FILE" value="composeflow/logs/app.log" />

    <!-- Define the appender for FILE -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <!-- The log file will be placed in the user's home directory under the specified subdirectory -->
        <file>${user.home}/${LOG_FILE}</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define appender for CONSOLE -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define log level and assign appenders to root logger -->
    <root level="debug">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>